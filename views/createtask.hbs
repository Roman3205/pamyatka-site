<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Pamyatkaplus</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link rel="stylesheet" href="/css/createtask.css">
</head>
<body>
    <header class="d-flex flex-wrap justify-content-start py-3 mb-4 header">
        <ul class="nav nav-pills mt-lg-1 pb-lg-1 gap-2 ms-4">
            <li class="nav-item"><a href="/pamyatkaplus/navigation?usermenu={{usermenu._id}}" class="nav-link" aria-current="page">Главная</a></li>
        </ul>
        <div class="my__link">
            <a href="/pamyatkaplus/tasks?usermenu={{usermenu._id}}" class="btn btn-warning">Задания</a>
        </div>
    </header>
    <main>
        <div class="container products-container main__box">
            <div class="row g-3 products-row">
                <!-- Форма создания -->
                <div class="col-lg-4 col-md-12 col-sm-12 mb-3 mb-lg-0">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                Новое задание
                            </h5>
                            <form action="/pamyatkaplus/tasks/my/create?usermenu={{usermenu._id}}" method="POST">
                                <!-- Название -->
                                <div class="mb-3">
                                    <input name="title" type="text" class="form-control" placeholder="Название задания">
                                </div>
                                <!-- Категория -->
                                <select name="category" class="form-select mb-3">
                                    <option value="">Без категории</option>
                                    <option value="Легкое">Легкое</option>
                                    <option value="Среднее">Среднее</option>
                                    <option value="Сложное">Сложное</option>
                                </select>
                                <!-- Описание -->
                                <div class="mb-3">
                                    <textarea name="description" class="form-control" placeholder="Описание"></textarea>
                                </div>
                                <!-- Изображение -->
                                <div class="mb-3">
                                    <input name="image" type="text" class="form-control"
                                        placeholder="Ссылка на изображение">
                                </div>
                                <!-- Правильный ответ -->
                                <div class="mb-3">
                                    <input name="answer" type="text" class="form-control"
                                        placeholder="Ответ на ваше задание">
                                </div>
                                <!-- Кнопка публикации -->
                                <div class="d-flex justify-content-end mb-3">
                                    <button class="btn btn-public">Опубликовать</button>
                                </div>
                                <!-- Сообщения -->
                                {{#if error}}
                                <div class="alert alert-danger">Произошла ошибка, попробуйте ещё раз</div>
                                {{/if}}
                                {{#if success}}
                                <div class="alert alert-success">Задание отправлено на проверку</div>
                                {{/if}}
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Список заданий -->
                <div class="col-lg-8 col-md-12 col-sm-12 mt-5 mt-lg-3 products-list">
                    {{#each tasks}}
                    <div class="product card mb-3">
                        <div class="row g-0">
                            <div class="col-md-4">
                                <img src="{{this.image}}" class="image" width="400px">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body">
                                    <h5 class="product-header card-title">
                                        <div class="product-title">
                                            {{this.title}}
                                        </div>
                                        {{!-- <div class="product-controls">
                                            <a href="/pamyatkaplus/tasks/my/remove?id={{this._id}}" class="btn btn-secondary btn-sm">Удалить</a>
                                        </div> --}}
                                    </h5>
                                    <h6 class="card-subtitle my-2 text-muted">{{this.description}}</h6>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </main>
</body>

</html>